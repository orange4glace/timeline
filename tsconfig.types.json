    "removeComments": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "types",
		"paths": {
			"@lib/*": ["*"]
		}
  },
	"include": [
		"./lib"
	],
	"exclude": [
		"./node_modules/"
	]
}
